@{
    ViewBag.Title = "Reset password confirmation";
}

<section class="hero text-white py-4 flex-grow-1">
    <div class="container py-4">
        <div class="row">
            <hgroup class="title">
                <h1 class="display-4 mb-5">@ViewBag.Title</h1>
            </hgroup>
            <div class="col-lg-6">
                <div class="alert alert-success" role="alert">
                    Your password has been reset. Please @Html.ActionLink("click here to log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
                </div>
            </div>
        </div>
    </div>
</section>

<div class="wrapper">
    <div class="push"></div>
</div>