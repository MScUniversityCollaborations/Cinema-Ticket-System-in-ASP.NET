@model MovieTickets.ViewModels.AuditoriumFormViewModel

@{
    ViewBag.Title = Model.PageTitle;
}

<h2>@Model.Name</h2>

<section class="hero text-white py-4 flex-grow-1">
    <div class="container py-4">
        <div class="row">
            <h2 class="display-4 mb-5">@ViewBag.Title</h2>

            <div class="col-lg-6">
                @using (Html.BeginForm("SaveAuditorium", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>@Model.PageDesc</h4>
                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Please add the auditorium's name (Ex: Auditorium E-1)" })
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        @Html.LabelFor(m => m.TotalSeats, new { @class = "col-md-2 text-no-wrap control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.TotalSeats, new { @type = "number", min = "0", @class = "form-control", @placeholder = "Please add the movie duration time in minutes (E.x: 120)." })
                        </div>
                    </div>

                    @Html.HiddenFor(m => m.Id)
                    <div class="form-group">
                        <div class="col-md-offset-2 mt-5 mb-5 col-md-10">
                            @if (Model.Id == 0)
                            {
                                <button type="submit" class="btn btn-primary btn-lg w-100"><i class="fa-solid fa-plus"></i> @Model.State</button>
                            }   
                            else { 
                                <button type="submit" class="btn btn-primary btn-lg w-100"><i class="fa-solid fa-floppy-disk"></i> @Model.State</button>
                            }
                        </div>
                    </div>
                    }
                </div>
            </div>
    </div>
</section>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
