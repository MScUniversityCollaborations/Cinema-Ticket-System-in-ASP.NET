@model MovieTickets.Models.Reservation

@{
    ViewBag.Title = "Delete Reservation Confirmation";
}

<section class="hero text-white py-4 flex-grow-1">
    <div class="container py-4">
        <div class="row">
            <h2 class="display-4 mb-5">@ViewBag.Title</h2>

            <div class="col-lg-6">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <h4>Are you sure you want to delete this reservation?</h4>
                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(m => m.Id, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.DisplayFor(m => m.Id, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        @Html.LabelFor(m => m.User.Email, new { @class = "col-md-2 text-no-wrap control-label" })
                        <div class="col-md-10">
                            @Html.DisplayFor(m => m.User.Email, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        @Html.LabelFor(m => m.Screening.Movie.Title, new { @class = "col-md-2 text-no-wrap control-label" })
                        <div class="col-md-10">
                            @Html.DisplayFor(m => m.Screening.Movie.Title, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        <p class="col-md-2 text-no-wrap control-label">Auditorium Name</p>
                        <div class="col-md-10">
                            @Html.DisplayFor(m => m.Screening.Auditorium.Name, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        @Html.LabelFor(m => m.Screening.ScreeningStart, new { @class = "col-md-2 text-no-wrap control-label" })
                        <div class="col-md-10">
                            @Html.DisplayFor(m => m.Screening.ScreeningStart, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        @Html.LabelFor(m => m.Screening.ScreeningEnd, new { @class = "col-md-2 text-no-wrap control-label" })
                        <div class="col-md-10">
                            @Html.DisplayFor(m => m.Screening.ScreeningEnd, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        @Html.LabelFor(m => m.Reserved, new { @class = "col-md-2 text-no-wrap control-label" })
                        <div class="col-md-10">
                            @if (Model.Reserved)
                            {
                                <p>Yes</p>
                            }
                            else
                            {
                                <p>No</p>
                            }
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        @Html.LabelFor(m => m.Paid, new { @class = "col-md-2 text-no-wrap control-label" })
                        <div class="col-md-10">
                            @if (Model.Paid)
                            {
                                <p>Yes</p>
                            }
                            else
                            {
                                <p>No</p>
                            }
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        @Html.LabelFor(m => m.PaymentType, new { @class = "col-md-2 text-no-wrap control-label" })
                        <div class="col-md-10">
                            @Html.DisplayFor(m => m.PaymentType, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        @Html.LabelFor(m => m.Active, new { @class = "col-md-2 text-no-wrap control-label" })
                        <div class="col-md-10">
                            @if (Model.Active)
                            {
                                <p>Yes</p>
                            }
                            else
                            {
                                <p>No</p>
                            }
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        @Html.LabelFor(m => m.Seat, new { @class = "col-md-2 text-no-wrap control-label" })
                        <div class="col-md-10">
                            @Html.DisplayFor(m => m.Seat, new { @class = "form-control" })
                        </div>
                    </div>

                    @Html.HiddenFor(m => m.Id)
                    <div class="form-group">
                        <div class="col-md-offset-2 mt-5 mb-5 col-md-10">
                            <button type="submit" class="btn btn-primary btn-lg w-100"><i class="fa-solid fa-trash-can"></i> Delete</button>
                        </div>
                    </div>
                }
            </div>
            </div>
    </div>
</section>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
