            document.getElementById('nullSeat').innerHTML = '<i class="fa-solid fa-triangle-exclamation"></i> You have not selected a seat!!'
       
        } *@

    }

    document.getElementsByName('check').onclick = function () {
       

    };

    function onlyOne(checkbox) {
     
        var checkboxes = document.getElementsByName('check')

        checkboxes.forEach((item) => {
            checkboxes.forEach((item) => {

             
                if (item.checked) {
                    let seatID = item.id;
                    const seat = seatID.split(".");
                    document.getElementById('seat').innerHTML = "Row: " + seat[0] + " Seat: " + seat[1];
                    document.getElementById("btnCheckOut").disabled = false;
                   @* document.getElementById('nullSeat').hidden = true; *@
                    document.getElementById("nullSeat").style.visibility = "hidden";
                } 
               
            })


            if (item == checkbox) {
                document.getElementById('seat').innerHTML = "NONE"
                document.getElementById('nullSeat').innerHTML = ''
                document.getElementById("btnCheckOut").disabled = true;
             
            }

            if (item !== checkbox) {

                item.checked = false
            }


        })

    }

</script>

