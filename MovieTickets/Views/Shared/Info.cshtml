@{
    ViewBag.Title = "Notice!";
}
<section class="hero text-white py-4 flex-grow-1">
    <div class="container py-4">
        <div class="row">
            <h2 class="display-4 mb-5"><i class="fa-solid fa-circle-check text-success"></i> @ViewBag.Title</h2>

            <div class="col-lg-6">
                <div class="alert alert-success" role="alert">
                    @ViewBag.Message
                </div>
            </div>
        </div>
    </div>
</section>

<div class="wrapper">
    <div class="push"></div>
</div>