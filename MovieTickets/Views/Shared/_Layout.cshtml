    <!-- Back to top button -->
    <a id="button-back-top"></a>

    <div class="d-flex flex-column h-100">
        @RenderBody()

        <!-- FOOTER -->
        <footer class="w-100 py-5 flex-shrink-0">
            <div class="container py-5 ">
                <div class="row gy-4 gx-5">
                    <div class="col-lg-4 col-md-6">
                        <h5 class="text-white mb-3">About MovieTickets</h5>
                        <ul class="list-unstyled text-muted">
                            <li class="mb-2"><i class="fa-solid fa-location-pin"></i> 80, M. Karaoli & A. Dimitriou St., 18534 Piraeus</li>
                            <li class="mb-2"><i class="fa-solid fa-phone"></i> (+30) 210 414200</li>
                            <li class="mb-2"><i class="fa-solid fa-paper-plane"></i> info@movieTickets.com</li>
                        </ul>
                        <p class="small text-muted">&copy; @DateTime.Now.Year Copyrights. All rights reserved. MovieTickets</p>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <h5 class="text-white mb-3">Social Media</h5>
                        <ul class="list-unstyled text-muted">
                            <li><i class="fa-brands fa-instagram"></i> MovieTickets </li>
                            <li><i class="fa-brands fa-facebook"></i> MovieTickets Cinema</li>
                            <li><i class="fa-brands fa-pinterest"></i> MovieTickets</li>
                            <li><i class="fa-brands fa-twitter"></i>  MovieTickets</li>


                        </ul>
                    </div>
                    
                </div>
             
            </div>
           
        </footer>
    </div>

    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    @Scripts.Render("~/Scripts/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/bootstrap")
    @Scripts.Render("~/Scripts/custom_js")
    @RenderSection("scripts", required: false)
</body>
