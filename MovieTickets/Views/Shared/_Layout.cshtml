@using System.Web.Optimization;
@using MovieTickets.Models;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MovieTickets</title>

    <link href="~/Images/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    @Styles.Render("~/Styles/bootstrap")
    @Styles.Render("~/Styles/site")
    @Styles.Render("~/Styles/fontawesome")
    @Styles.Render("~/bundles/modernizr")


    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />

</head>
<body>

    <section class="ftco-section">
        <nav class="navbar navbar-expand-lg fixed-top navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
            <div class="container">
                <a href="#" class="d-flex center align-items-center m-lg-3 m-4 col-md-3 mb-2 mb-md-0">
                    <img src="~/Images/logo_movie_tickets.png" class="bi me-2" role="img" aria-label="Logo" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="fa fa-bars"></span> MENU
                </button>

                <div class="collapse navbar-collapse" id="ftco-nav">
                    <ul class="navbar-nav m-auto">
                        <li class="nav-item"><a href="/home/index" class="nav-link"><i class="fa fa-home"></i> Home</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="dropdown04" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-film"></i> Movies</a>
                            <div class="dropdown-menu" aria-labelledby="dropdown04">
                                <a class="dropdown-item" href="/movies/nowshowing"><i class="fas fa-video"></i> Now Showing</a>
                                <a class="dropdown-item" href="/movies/comingsoon"><i class="fas fa-photo-video"></i> Coming Soon</a>
                            </div>
                        </li>
                    </ul>

                    @Html.Partial("_LoginPartial")

                    @Html.Partial("_RolePartial")

                </div>
            </div>
        </nav>
    </section>

