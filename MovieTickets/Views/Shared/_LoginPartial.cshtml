@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="navbar-nav col-md-6 text-end">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="dropdown04" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa-solid fa-user"></i> @User.Identity.GetUserName()</a>
                <div class="dropdown-menu" aria-labelledby="dropdown04">
                    <a class="dropdown-item" href="@Url.Action("Index", "Manage")"><i class="fa fa-address-card"></i> Profile</a>
                    <a class="dropdown-item" href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out-alt"></i> Logout</a>
                </div>
            </li>
        </ul>
    }
}
else
{
<ul class="navbar-nav col-md-5 text-end">
    <li class="nav-item"><a href="@Url.Action("Register", "Account")" class="nav-link">Register</a></li>
    <li class="nav-item"><a href="@Url.Action("Login", "Account")" class="nav-link"><i class="fa-solid fa-right-to-bracket"></i> Log In</a></li>
</ul>
}
